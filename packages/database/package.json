{
  "name": "@repo/database",
  "version": "0.0.0",
  "description": "Database package for the Katy and Hunter Wedding Site",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "scripts": {
    "db:migrate": "dotenvx run -f .env.development.local -- drizzle-kit migrate",
    "db:migrate:prod": "dotenvx run -f .env.production.local -- drizzle-kit migrate",
    "db:generate": "dotenvx run -f .env.development.local -- drizzle-kit generate",
    "db:generate:prod": "dotenvx run -f .env.production.local -- drizzle-kit generate",
    "db:push": "dotenvx run -f .env.development.local -- drizzle-kit push",
    "db:push:prod": "dotenvx run -f .env.production.local -- drizzle-kit push",
    "db:pull": "dotenvx run -f .env.development.local -- drizzle-kit pull",
    "db:pull:prod": "dotenvx run -f .env.production.local -- drizzle-kit pull",
    "db:seed": "dotenvx run -f .env.development.local -- tsx ./src/seed.ts",
    "db:seed:prod": "dotenvx run -f .env.production.local -- tsx ./src/seed.ts",
    "db:seed:reset": "dotenvx run -f .env.development.local -- tsx ./src/reset.ts",
    "db:seed:reset:prod": "dotenvx run -f .env.production.local -- tsx ./src/reset.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "nanoid": "^5.1.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  }
}
